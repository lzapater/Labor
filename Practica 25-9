#include <iostream>

using namespace std;

void imprimir(int arr[],int tam){
        for(int i=0;i<tam;i++){
            cout<<arr[i]<<endl;
        }
}

int sumait(int arr[],int tam){
    int suma=0;
    for(int i=0;i<tam;i++){
        suma+=arr[i];
    }
    return suma;
}

int sumarec(int arr[],int tam){

    if(tam==1){
        return arr[0];
    }
    else
        return arr[tam-1]+sumarec(arr,tam-1);

}

void invert(int arr[],int tam){

    int aux;
    for(int i=0;i<tam/2;i++){
            aux=arr[i];
            arr[i]=arr[tam-1-i];
            arr[tam-1-i]=aux;
    }
}

int invertr(int arr[], int tam){

    if (tam==1)
        return arr[0];

    else{
    int aux = arr[0];
    arr[0] = arr[tam-1];
    arr[--tam] = aux;

    return invertr(arr +1, tam-1);
    }
}

void burbuja(int arr[],int tam){

    int i,j;
    for (i=0;i<tam-1;i++){
        for(j=0;j<tam-i-1;j++){
            if(arr[j]>arr[j+1])
            {
                int temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
            }
        }
    }
}

void insertion(int arr[],int tam){

    int pivot,j;
    for (int i=1;i<tam; i++){
        pivot=arr[i];
        j=i-1;
        
        while (j>=0 && arr[j]>pivot){
            arr[j+1]=arr[j];
            j--;
        }
        arr[j+1]=pivot;
    }
}

int main(){
        int x[6]={10,14,7,4,3,5};
        //invertr(x,5);
        //ordenar(x,6);
        burbuja(x,6);
        imprimir(x,6);
}

void quicksort(int arr,int p,int u)
{
  int medio,pivote;
  central=(p+u)/2;
  pivote=arr[central];
  i=p;
  j=u;
  do
  {
    while(arr[i]<pivote) i++;
    while(arr[j]>pivote) j--;
    if(i<=j)
     {
      double temp;
      temp=arr[i];
      arr[i]=arr[j]; /*intercarrmbia A[i] con A[j] */
      arr[j]=temp;
      i++;
      j--;
     }
   }
   while(i<=j);
   if(p<j)
   quicksort(arr,p,j); /*mismo proceso con sublista izquierda*/
   if(i<u)
   quicksort(arr,i,u); /*mismo proceso con sublista derecha*/
}
void escribir(double arr[20], int n)
{
 int i;
cout<<endl<<"ARREGLO ASCENDENTE"<<endl<<endl;
   for(i=0;i<n;i++)
     {
      cout<<arr[i]<<setw(5);
     }
   cout<<endl<<endl;

}



